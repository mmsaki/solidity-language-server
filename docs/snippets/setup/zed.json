{
  "lsp": {
    "solidity": {
      "binary": {
        "path": "solidity-language-server",
        "arguments": ["--stdio"]
      },
      "settings": {
        "solidity-language-server": {
          "inlayHints": {
            "parameters": true,
            "gasEstimates": true
          },
          "lint": {
            "enabled": true,
            "severity": [],
            "only": [],
            "exclude": []
          },
          "fileOperations": {
            "templateOnCreate": true,
            "updateImportsOnRename": true,
            "updateImportsOnDelete": true
          }
        }
      }
    }
  }
}
